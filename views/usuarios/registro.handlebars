<div class="card">
  <div class="card-body">
    <h1>Registro de usuário</h1>
    <hr>
    {{#each errors}}
      <div class="alert alert-danger" role="alert">
        {{this.text}}
      </div>
    {{/each}}
    <form action="/usuarios/registro" method="POST">
      <label for="nome">Nome: </label>
        <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome do usuário" required>
      <label for="email" >Email:</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="Email do usuário" required>
      <label for="senha" >Senha:</label>
        <input type="password" name="senha" id="senha" class="form-control" placeholder="Senha do usuário" required>
      <label for="senha2" >Repita a senha:</label>
        <input type="password" name="senha2" id="senha2" class="form-control" placeholder="Senha do usuário" required>
      <button type="submit" class="btn btn-success mt-2">Registrar</button>
    </form>
  </div>
</div>