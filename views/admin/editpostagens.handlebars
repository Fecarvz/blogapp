<h3>Nova postagem:</h3>
{{#each errors}}
  <div class="alert alert-danger" role="alert">
    {{this.text}}
  </div>
{{/each}}
<div class="card">
  <div class="card-body">
    <form action="http://localhost:8081/admin/postagens/edit" method="POST">
      <input type="hidden" name="id" value="{{postagem.id_post}}">
      <label for="titulo">Titulo: </label>
        <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Titulo do post" value = "{{postagem.titulo}}"required>
      <label for="slug" >Slug: </label>
        <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug do post" value="{{postagem.slug}}"required>
      <label for="descricao" >Descrição: </label>
        <input type="text" name="descricao" id="descricao" class="form-control" placeholder="Descrição do post" value="{{postagem.descricao}}" required>
      <label for="conteudo" >Conteúdo: </label>
      <textarea name="conteudo" id="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
      <label for="categoria">Categoria: </label>
      <select name="categoria" id="categoria" class="custom-select" required>
        {{#each categorias}}
          <option value="{{this.id_categoria}}">{{this.nome}}</option>
          {{else}}
          <option value="0">Nenhuma categoria cadastrada</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-2">Editar</button>
    </form>
  </div>
</div>