
<h3>Nova categoria:</h3>
{{#each errors}}
  <div class="alert alert-danger" role="alert">
    {{this.text}}
  </div>
{{/each}}

<div class="card">
  <div class="card-body">
    <form action="http://localhost:8081/admin/categorias/nova" method="POST">
      <label for="nome">Nome: </label>
        <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome da categoria">
      <label for="slug" >Slug: </label>
        <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug da categoria">
      <button type="submit" class="btn btn-success mt-2">Criar categoria</button>
    </form>
  </div>
</div>