<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Novo post</button></a>
{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4 class="card-title">{{this.titulo}}</h4>
      <p class="card-subtitle mb-2 text-muted">Descrição: {{this.descricao}}</p>
      <small class="d-block mb-1">Categoria: {{this.nome}}</small>
      <small class="d-block mb-3">Data: {{this.createdAt}}</small>
      <a href="/admin/postagens/edit/{{this.id_post}}"><button class="btn btn-success">Editar post</button></a>
      <form action="http://localhost:8081/admin/postagens/deletar" method="post">
        <input type="hidden" name="id" value="{{this.id_post}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar post</button>
      </form>
    </div>
  </div>
{{else}}
  <div class="alert alert-danger mt-4" role="alert">
    Nenhuma postagem cadastrada!
  </div>
{{/each}}
